{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "miniprogram",
    "rootDir": ".",
    "declaration": false,
    "declarationMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "types": ["miniprogram-api-typings"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "miniprogram"
  ]
}