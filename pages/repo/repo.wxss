.container {
  background-color: #f5f5f5;
  min-height: 100%;
}

/* 仓库基本信息 */
.repo-info {
  background-color: #fff;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.repo-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #24292e;
  display: block;
  margin-bottom: 16rpx;
}

.repo-desc {
  font-size: 28rpx;
  color: #586069;
  line-height: 1.5;
  display: block;
  margin-bottom: 24rpx;
  word-break: break-all;
}

.repo-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
  margin-bottom: 12rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #6a737d;
}

.meta-value {
  font-size: 24rpx;
  color: #24292e;
  font-weight: 500;
}

.star-btn-container {
  display: flex;
  justify-content: flex-end;
}

.star-btn {
  background-color: #fff;
  color: #24292e;
  border: 2rpx solid #e1e4e8;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
}

.star-btn.starred {
  background-color: #fef2f2;
  color: #d73a49;
  border-color: #fcb2b7;
}

/* 路径导航 */
.breadcrumb {
  background-color: #fff;
  padding: 20rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  display: flex;
  overflow-x: auto;
  white-space: nowrap;
}

.breadcrumb-item {
  display: inline-flex;
  align-items: center;
  margin-right: 8rpx;
}

.breadcrumb-text {
  font-size: 24rpx;
  color: #0366d6;
  cursor: pointer;
}

.breadcrumb-text:active {
  color: #005cc5;
}

.breadcrumb-separator {
  font-size: 24rpx;
  color: #6a737d;
  margin-left: 8rpx;
}

/* 文件列表 */
.file-list {
  padding: 0 20rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #6a737d;
}

.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #6a737d;
}

.file-items {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f1f3f4;
}

.file-item:last-child {
  border-bottom: none;
}

.file-item:active {
  background-color: #f6f8fa;
}

.dir-item {
  font-weight: 500;
}

.file-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.file-name {
  flex: 1;
  font-size: 28rpx;
  color: #24292e;
}

.file-right {
  font-size: 28rpx;
  color: #6a737d;
}

.file-size {
  font-size: 24rpx;
  color: #6a737d;
  margin-left: 20rpx;
}