<view class="container">
  <view class="header">
    <text class="title">Git 仓库浏览</text>
    <text class="subtitle">使用 GitHub Personal Access Token 登录</text>
  </view>
  <view class="content">
    <view class="input-group">
      <text class="label">Personal Access Token</text>
      <input 
        class="input" 
        placeholder="请输入 GitHub Personal Access Token" 
        password="{{false}}"
        bindinput="onInput"
        value="{{token}}"
      />
    </view>
    <button class="btn-primary" bindtap="onSubmit" disabled="{{!token}}">
      登录
    </button>
    <view class="tip">
      <text class="tip-text">
        如何获取 Personal Access Token？
      </text>
      <text class="tip-link" bindtap="onHowToGetToken">
        查看教程
      </text>
    </view>
  </view>
</view>