.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100%;
}

.header {
  margin-bottom: 60rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #24292e;
  margin-bottom: 16rpx;
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: #6a737d;
  display: block;
}

.content {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #24292e;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e1e4e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.btn-primary {
  width: 100%;
  height: 80rpx;
  background-color: #24292e;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary[disabled] {
  background-color: #d1d5da;
  color: #959da5;
}

.tip {
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #6a737d;
}

.tip-link {
  font-size: 24rpx;
  color: #0366d6;
  margin-left: 8rpx;
}

.tip-link:active {
  color: #005cc5;
}